<% include header.ejs %>
    <article  class="post">

    <div class="post-head">
        <h1 class="post-title"><%= sendcard.title %></a></h1>
        <div class="post-meta">
            <span class="author">作者：<a><%= sendcard.userName %></a></span> •
            <time class="post-date" datetime=<%= sendcard.create_date%> title=<%= sendcard.create_date%>><%= sendcard.create_date%></time>
        </div>
    </div>
    <div class="post-content">
        <p><%= sendcard.content%></p>
    </div>
    <% follows.forEach(function (follow) { %>
  
      <footer class="post-footer clearfix">
<div class="container">
  <div class="row">
  <div class="col-lg-1">
    <p><%= follow.userName %></p>
  </div><!-- /.col-lg-6 -->
  <div class="col-lg-9">
    <p><%= follow.content %></p>
  </div><!-- /.col-lg-6 -->
    <div class="col-lg-2">
    <p><%= follow.floor %></p>
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->
    </div>
    </footer>


<% }) %>
</article>
<% if(user) { %>
    <form role="form" method="post">
  <div class="form-group">
    <label for="name">回帖</label>
    <textarea class="form-control" rows="3" name = "content"></textarea>
  </div>
  <button type="submit" class="btn btn-success">回帖</button>
</form>
<% } %>
    <script src="http://cdn.bootcss.com/jquery/1.11.2/jquery.min.js"></script>
    <script src="http://cdn.bootcss.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
  </div>
  </body>
</html>
